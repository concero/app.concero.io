.questsHeader {
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	margin-bottom: var(--sp-md);

	h6 {
		color: var(--color-grey-600);
	}
}

.smallCardsContainer {
	flex-direction: row;
	gap: var(--sp-lg);
	width: 100%;
	flex-wrap: wrap;
}

.monthlyQuests {
	gap: var(--sp-lg);
	margin-bottom: var(--sp-lg);
}

.dailyQuests {
	flex-direction: row;
	gap: var(--sp-lg);
}

.otherQuestsWrap {
	flex-direction: column;
	gap: var(--sp-lg);
}

.campaign {
	max-width: 100% !important;
}

.loadMoreWrap {
	width: 100%;
	align-items: center;
	margin-top: var(--sp-lg);
}

@media (max-width: 580px) {
	.dailyQuests {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
	}
}
