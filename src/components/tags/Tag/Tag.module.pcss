.tag {
	flex-direction: row;
	flex-wrap: nowrap;
	white-space: nowrap;
	align-items: center;
	border-radius: var(--sp-xl);
	gap: var(--sp-xs);
	justify-content: center;
	font-size: 14px;
	font-weight: 400;
	padding: var(--sp-xs) var(--sp-sm);
}

.tagWrap {
	padding: 3px var(--sp-xs);
}

.sm {
	font-size: 12px;
}

.branded {
	background-color: var(--color-primary-100);

	p {
		color: var(--color-primary-700);
	}
}
