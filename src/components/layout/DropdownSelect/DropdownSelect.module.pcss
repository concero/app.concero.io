.dropdownSelect {
	position: relative;
}

.dropdownButton {
	border: none;
	background: var(--color-grey-200);

	&:hover {
		background: var(--color-grey-200);
		border: none;
	}
}

.dropdownButtonSimple {
	border: none;
	background: none;

	&:hover {
		background: none;
		border: none;
	}
}

.selectOptions {
	position: absolute;
	right: 0;
	min-width: 140px;
	background-color: var(--color-grey-100);

	button {
		justify-content: flex-start;
	}

	button:hover {
		transform: translateY(-2px);
	}
}
