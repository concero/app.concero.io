.user_actions_modal {
	width: 100% !important;
	transform: translateY(20px);
	opacity: 0;
	transition: all 0.3s ease-in-out;
	max-height: 90vh;
	max-width: 806px !important;
	overflow-y: hidden;
	& > * {
		flex-direction: row;
	}
	/*header of modal*/
	& > div:first-child > h2 {
		font: var(--font-heading-xlarge) !important;
		color: var(--color-gray-700) !important;
	}
}
.wrap_modal {
	z-index: 1000;
}
